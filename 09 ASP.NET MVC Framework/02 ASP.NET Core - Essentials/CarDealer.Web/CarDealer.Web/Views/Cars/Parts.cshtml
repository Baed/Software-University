@model IEnumerable<CarWithPartsModel>

@{
    ViewData["Title"] = $"GetAll Cars With Ther Parts";
}

<h2>@ViewData["Title"]
   <a class="btn btn-primary" href="/cars/create">Add Car</a> 
    </h2>


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Make
            </th>
            <th>
                Model
            </th>
            <th>
                TravelledDistance
            </th>

            <th>
                Parts
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <th>
                    <a href="/cars/@car.Make">@car.Make</a>
                </th>
                <th>
                    @car.Model
                </th>
                <th>
                    @(car.TravelledDistance / 1000) KM
                </th>
                <th>
                    <ul>
                        @foreach (var p in car.Parts)
                        {
                            <li>@p.Name - $@p.Price.ToString("F2")</li>
                        }
                    </ul>
                </th>
            </tr>
        }
    </tbody>
</table>