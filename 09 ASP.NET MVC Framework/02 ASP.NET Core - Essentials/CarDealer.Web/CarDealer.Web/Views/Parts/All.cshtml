@model PartPageListingModel

@{
    ViewData["Title"] = "All Parts";
}
<h2>@ViewData["Title"]
    <a class="btn btn-primary" href="/parts/create">Add Part</a>
    </h2>

@{
    var previusDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    var nextDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;

}
<ul class="pagination @previusDisabled">
    <li class="page-item @previusDisabled">
        <a class="page-link" href="/parts/all?=@(Model.PreviousPage)" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)"><a class="page-link" href="/parts/all?=@i">@i</a></li>
    }
    <li class="page-item @nextDisabled">
        <a class="page-link @nextDisabled" href="/parts/all?=@(Model.NextPage)" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
</ul>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th>
                SupplierName
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var part in Model.Parts)
        {
        <tr>
            <td>
                @part.Name
            </td>
            <td>
                @part.Price.ToPrice()
            </td>
            <td>
                @part.Quantity
            </td>
            <td>
                @part.SupplierName
            </td>
            <td>
                <a href="/parts/edit/@part.Id" class="btn btn-warning">Edit</a>
                <a href="/parts/delete/@part.Id" class="btn btn-danger">Delete</a>

            </td>
        </tr>
        }
    </tbody>
</table>
<ul class="pagination @previusDisabled">
    <li class="page-item @previusDisabled">
        <a class="page-link" href="/parts/all?=@(Model.PreviousPage)" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)"><a class="page-link" href="/parts/all?=@i">@i</a></li>
    }
    <li class="page-item @nextDisabled">
        <a class="page-link @nextDisabled" href="/parts/all?=@(Model.NextPage)" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
</ul>
